<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>  

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.petgrooming.controllers.DashboardController">
    <!-- Sidebar for navigation -->
    <left>
        <VBox spacing="15" prefWidth="200" style="-fx-background-color: #2c3e50;" alignment="CENTER">
            <Label text="Pet Grooming Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Button text="Manage Users" style="-fx-background-color: #34495e; -fx-text-fill: white;" fx:id="btnManageUsers"/>
            <Button text="Appointments" style="-fx-background-color: #34495e; -fx-text-fill: white;" fx:id="btnAppointments"/>
            <Button text="Reports" style="-fx-background-color: #34495e; -fx-text-fill: white;" fx:id="btnReports"/>
            <Button text="My Profile" style="-fx-background-color: #34495e; -fx-text-fill: white;" fx:id="btnProfile"/>
            <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" fx:id="btnLogout"/>
        </VBox>
    </left>
    
    <!-- Top menu bar -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>
    
    <!-- Main content area -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #ecf0f1;">
            <VBox alignment="CENTER" spacing="20">
                <Label fx:id="welcomeLabel" text="Welcome to Pet Grooming Service Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <ImageView fx:id="dashboardImage" fitHeight="200" fitWidth="300"/>
                <Label text="Select an option from the sidebar to get started!" style="-fx-font-size: 16px;"/>
            </VBox>
        </StackPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10px;">
            <Label text="Â© 2024 Pet Grooming Service" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
