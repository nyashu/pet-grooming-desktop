<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.petgrooming.controllers.MyProfileController"
      alignment="CENTER" spacing="30" styleClass="myprofile-container">


    <!-- Profile Header -->
    <Label text="My Profile" styleClass="myprofile-header" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Profile Card -->
    <VBox styleClass="myprofile-card" alignment="CENTER" spacing="20" style="-fx-background-color: #fff; -fx-border-radius: 8px; -fx-padding: 20px; -fx-pref-width: 400px;">
        <GridPane hgap="20" vgap="15" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 20px; -fx-border-radius: 8px; -fx-background-insets: 0;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100" />
                <ColumnConstraints halignment="LEFT" minWidth="250" />
            </columnConstraints>

            <!-- Name -->
            <Label text="Name:" styleClass="myprofile-label"/>
            <Label fx:id="lblName" text="John Doe" styleClass="myprofile-value"/>

            <!-- Address -->
            <Label text="Address:" styleClass="myprofile-label"/>
            <Label fx:id="lblAddress" text="123 Main Street, Springfield" styleClass="myprofile-value"/>

            <!-- Email -->
            <Label text="Email:" styleClass="myprofile-label"/>
            <Label fx:id="lblEmail" text="john.doe@example.com" styleClass="myprofile-value"/>

            <!-- Phone -->
            <Label text="Phone:" styleClass="myprofile-label"/>
            <Label fx:id="lblPhone" text="+1234567890" styleClass="myprofile-value"/>
        </GridPane>
    </VBox>

    <!-- Footer -->
    <Label text="Need help? Contact support@petgrooming.com" styleClass="myprofile-footer" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
</VBox>
