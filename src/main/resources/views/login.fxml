<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.petgrooming.controllers.LoginController">
    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="400" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label text="Pet Grooming Service" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <Label text="Login to your account" style="-fx-font-size: 16; -fx-text-fill: #666666;"/>

        <VBox spacing="10" alignment="CENTER" maxWidth="300">
            <TextField fx:id="emailField" promptText="Enter your email" style="-fx-font-size: 14; -fx-padding: 10;"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 14; -fx-padding: 10;"/>
        </VBox>

        <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10; -fx-cursor: hand;"/>
        
        <Label text="Don't have an account? Sign up!" style="-fx-font-size: 12; -fx-text-fill: #4CAF50; -fx-cursor: hand;" onMouseClicked="#handleSignUp"/>
    </VBox>
</StackPane>
